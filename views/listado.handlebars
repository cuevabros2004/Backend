<h2 style="color:rgb(248, 243, 244);">Productos/Servicios</h2>

{{#if hayProductos}}
<div class="table-responsive">
    <table class="table table-striped table-bordered table-secondary">
        <tr style="color: rgb(236, 236, 240); background-color: rgb(80, 80, 167);">
            <th>Nombre del Producto/Servicio</th>
            <th>Precio</th>
            <th>Im√°gen</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>
                {{this.title}}
            </td>
            <td>
                {{this.price}}
            </td>
            <td>
                <img width="70px" src={{this.thumbnail}} alt="Imagen"/>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-light">No se encontraron productos/servicios</h3>
{{/if}}
    <button class="btn btn-success mt-3 mb-5" style="background-color: rgb(35, 35, 139);" onclick="location.href='http://localhost:8080/'">Agregar Producto/Servicio</button>
